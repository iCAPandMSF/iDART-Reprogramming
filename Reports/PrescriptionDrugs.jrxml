	<queryString language="hql">
		<![CDATA[select d.name as name, CAST(preDrugs.amtPerTime,string) || ' ' ||
CASE WHEN preDrugs.amtPerTime > 1 THEN
	CASE WHEN substring(d.form.formLanguage1,char_length(d.form.formLanguage1),1) = 's' 
		THEN d.form.formLanguage1
		ELSE (d.form.formLanguage1 || 's')
	END 
ELSE
	d.form.formLanguage1
END || ' ' ||
CAST(preDrugs.timesPerDay,string) || ' times a day' AS dosage

from Prescription as pre, PrescribedDrugs as preDrugs, Drug as d
where preDrugs.prescription = pre.id 
and pre.id = $P{id} 
and preDrugs.drug = d.id
order by d.name]]>
	</queryString>
